%h2 Answers

- unless @answers.empty?
	%table.table
		%thead
			%tr
				%th Title
				%th Truth

		%tbody
			- @answers.each do |answer|
				%tr
					%td= answer.answer_html
					%td= answer.truth?
					%td
						= link_to 'Edit', edit_admin_question_answer_path(@question, answer), class: 'btn btn-default'
- else
	%p No answers yet!

= link_to 'Add New Answer', new_admin_question_answer_path(@question), class: 'btn btn-default'
= link_to 'Back', admin_questions_path, class: 'btn btn-default'

